{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "./node_modules/@riseup/tooling/static/tsconfig.json",
  "include": ["./src/**/*", "./test/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": {
      "@definitions": ["./src/definitions"],
      "@pull": ["./src/pull"],
      "@push": ["./src/push"],
      "@helpers": ["./src/helpers"]
    }
  }
}
